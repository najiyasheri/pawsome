<!-- Top Bar -->
<div class="flex justify-between items-center px-6 py-4 ">
    <h1 class="font-bold mb-10 text-2xl">Order Management</h1>
</div>

<!-- Search Section -->
<!-- Search Section -->
<div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-6">
    <div class="flex-1 max-w-md">
        <form action="/admin/order" method="get" class="flex w-full relative">
            <!-- Search Icon -->
            <span class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <svg class="w-5 h-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                </svg>
            </span>

            <!-- Search Input -->
            <input type="search" name="search" value="<%= search %>"
                class="block w-full p-3 pl-10 text-sm text-gray-900 border border-gray-300 rounded-l-lg bg-gray-50 focus:ring-yellow-500 focus:border-yellow-500"
                placeholder="Search Orders..." required />

            <!-- Search Button -->
            <button type="submit"
                class="bg-yellow-400 hover:bg-yellow-500 text-white font-medium px-5 rounded-r-lg transition">
                Search
            </button>

            <!-- Clear Button -->
            <% if(search) { %>
                <a href="/admin/order" class="ml-2 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600">
                    Clear
                </a>
                <% } %>
        </form>
    </div>
</div>

            </div>
        </div>
    </div>

    <!-- Status Filter Buttons -->
    <div class="flex flex-wrap gap-3 mb-6">
        <button class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-1.5 rounded-full font-medium">All</button>
        <button class="bg-green-100 text-green-700 px-4 py-1.5 rounded-full font-medium">Delivered</button>
        <button class="bg-yellow-100 text-yellow-700 px-4 py-1.5 rounded-full font-medium">Processing</button>
        <button class="bg-red-100 text-red-700 px-4 py-1.5 rounded-full font-medium">Cancelled</button>
        <button class="bg-teal-100 text-teal-700 px-4 py-1.5 rounded-full font-medium">Returned</button>
    </div>

    <% const statusColors={ 'Pending' : 'text-blue-600' , 'Confirmed' : 'text-indigo-600' , 'Processing'
        : 'text-yellow-600' , 'Shipped' : 'text-purple-600' , 'Delivered' : 'text-green-600' , 'Cancelled'
        : 'text-red-600' , 'Returned' : 'text-teal-600' } %>

        <!-- Order Table -->
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm border-t border-gray-200">
                <thead>
                    <tr class="bg-gray-100 text-left text-gray-700 font-semibold">
                        <th class="py-3 px-4">Order Id</th>
                        <th class="py-3 px-4">Username</th>
                        <th class="py-3 px-4">No Of Items</th>
                        <th class="py-3 px-4">Date</th>
                        <th class="py-3 px-4">Status</th>
                        <th class="py-3 px-4">Payment Method</th>
                        <th class="py-3 px-4">Total Amount</th>
                        <th class="py-3 px-4 text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order=> { %>
                        <tr class="border-t hover:bg-gray-50">
                            <td class="py-3 px-4 flex items-center gap-2">
                                <%= order.orderId %>
                            </td>
                            <td class="py-3 px-4">
                                <%= order.user.name %>
                            </td>
                            <td class="py-3 px-4">
                                <%= order.items && order.items.length ? order.items.reduce((acc, item)=> acc + (item.quantity || 0), 0)
                                    : 0 %>
                            </td>
                            <td class="py-3 px-4">
                                <%= order.createdAt.toLocaleDateString("en-IN", { day: "2-digit" , month: "short" ,
                                    year: "numeric" }) %>
                            </td>

                            <!-- Status with dynamic color -->
                            <td class="py-3 px-4 font-semibold <%= statusColors[order.status] || 'text-gray-800' %>">
                                <%= order.status %>
                            </td>

                            <td class="py-3 px-4">
                                <%= order.paymentMethod %>
                            </td>
                            <td class="py-3 px-4">â‚¹<%= order.totalAmount %>
                            </td>
                            <td class="py-3 px-4 text-center">
                                <a href="/admin/order/<%= order._id %>"
                                    class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-1 rounded-md text-sm">View</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="flex justify-center mt-6">
            <nav aria-label="Page navigation">
                <ul class="flex items-center -space-x-px h-10 text-base">


                    <li>
                        <a href="/admin/order?page=<%= currentPage - 1 %>&search=<%= search %>"
                            class="flex items-center justify-center px-4 h-10 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700 <%= currentPage === 1 ? 'pointer-events-none opacity-50' : '' %>">
                            &lt;
                        </a>
                    </li>
                  

                    <% for(let i=1; i <=totalPages; i++) { %>
                        <li>
                            <a href="/admin/order?page=<%= i %>&search=<%= search %>"
                                class="flex items-center justify-center px-4 h-10 leading-tight text-gray-900 bg-white border border-gray-200 hover:bg-yellow-500 <%= currentPage === i ? 'z-10 text-white border-yellow-300 bg-yellow-500' : '' %>">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>

                            <!-- Next -->
                            <li>
                                <a href="/admin/order?page=<%= currentPage + 1 %>&search=<%= search %>"
                                    class="flex items-center justify-center px-4 h-10 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700 <%= currentPage === totalPages ? 'pointer-events-none opacity-50' : '' %>">
                                    &gt;
                                </a>
                            </li>

                </ul>
            </nav>
        </div>
<div class="max-w-4xl mx-auto p-8 bg-white rounded-xl shadow-lg border border-gray-200">

    <!-- Order Summary -->
    <div class="mb-8 border-b border-gray-300 pb-4">
        <h2 class="text-2xl font-bold text-gray-800 mb-4 text-center">Order Summary</h2>
        <div class="text-gray-700 space-y-3">
            <p><strong>Order Date:</strong>
                <%= order.createdAt.toLocaleDateString("en-IN") %>
            </p>
            <p><strong>Order Id:</strong>
                <%= order.orderId %>
            </p>
            <p><strong>Payment Method:</strong>
                <%= order.paymentMethod %>
            </p>
            <p><strong>Total:</strong> ₹<%= order.totalAmount %>
            </p>
            <p><strong>Status:</strong>
                <% const overallStatus=order.items.every(i=> i.status === "Cancelled")
                    ? "Cancelled"
                    : order.items.some(i => i.status === "Pending")
                    ? "Pending"
                    : "Completed";
                    %>
                    <span class="px-2 py-1 rounded text-white
          <%= overallStatus === 'Cancelled' ? 'bg-red-500' :
              overallStatus === 'Pending' ? 'bg-yellow-500' : 'bg-green-600' %>">
                        <%= overallStatus %>
                    </span>
            </p>
        </div>
    </div>

    <!-- Order Items -->
    <div class="mb-8">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Order Items</h2>
        <div class="space-y-4">
            <% order.items.forEach(item=> { %>
                <div
                    class="flex flex-col sm:flex-row items-center justify-between border border-gray-100 rounded-lg p-4 bg-white hover:bg-gray-50 transition">
                    <div class="flex items-center gap-4 w-full sm:w-auto">
                        <% if(item.image) { %>
                            <img src="/uploads/<%= item.image %>" class="w-16 h-16 object-cover rounded-md border" />
                            <% } %>
                                <div>
                                    <p class="font-semibold text-gray-800">
                                        <%= item.name %>
                                    </p>
                                    <% if(item.variant) { %>
                                        <p class="text-sm text-gray-600">
                                            <% if(item.variant.size!=='Nil') { %>Size: <%= item.variant.size %>
                                                    <% } %>
                                        </p>
                                        <% } %>
                                            <p class="text-sm text-gray-600">Quantity: <%= item.quantity %>
                                            </p>
                                            <p class="text-sm text-gray-600">Price: ₹<%= item.price %>
                                            </p>
                                            <p class="text-sm mt-1">
                                                <strong>Status:</strong>
                                                <span class="px-2 py-1 rounded text-white 
                  <%= item.status === 'Cancelled' ? 'bg-red-500' :
                      item.status === 'Delivered' ? 'bg-green-600' :
                      item.status === 'Shipped' ? 'bg-blue-500' :
                      item.status === 'Pending' ? 'bg-yellow-500' : 'bg-gray-500' %>">
                                                    <%= item.status %>
                                                </span>
                                            </p>
                                </div>
                    </div>

                    <div class="mt-3 sm:mt-0 text-right">
                        <p class="font-medium text-gray-700">Subtotal: ₹<%= item.subtotal %>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- Billing Details -->
    <div class="border-t pt-6 border-gray-300 pb-4">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Billing Details</h2>
        <div class="text-gray-700 space-y-1">
            <p><strong>Name:</strong>
                <%= order.userId.name %>
            </p>
            <p><strong>Email:</strong>
                <%= order.userId.email || "N/A" %>
            </p>
        </div>
    </div>

    <!-- Billing Address -->
    <div class="mt-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Billing Address</h2>
        <div class="text-gray-700 space-y-1">
            <p><strong>Name:</strong>
                <%= order.address?.name || order.userId.name %>
            </p>
            <p><strong>Address:</strong>
                <%= order.address?.address || "N/A" %>
            </p>
        </div>
    </div>
</div>

<!-- Back to Orders -->
<div class="mt-8 text-center">
    <a href="/orders"
        class="bg-yellow-500 text-white px-6 py-2 rounded-md text-sm font-medium hover:bg-yellow-600 transition">
        Back to My Orders
    </a>
</div>
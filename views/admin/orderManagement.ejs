<!-- Top Bar -->
<div class="flex justify-between items-center px-6 py-4 ">
    <h1 class="font-bold mb-10 text-2xl">Order Management</h1>
</div>

<!-- Search Section -->
<div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-6">
    <div class="flex-1 max-w-md">
        <div class="flex">
            <!-- Search Input with Icon -->
            <div class="relative w-full">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="w-5 h-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none"
                        viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                    </svg>
                </span>
                <input type="search" id="default-search" name="search"
                    class="block w-full p-3 pl-10 text-sm text-gray-900 border border-gray-300 rounded-l-lg bg-gray-50 focus:ring-yellow-500 focus:border-yellow-500"
                    placeholder="Search Orders..." required />
            </div>

            <!-- Search Button -->
            <button class="bg-yellow-500 hover:bg-yellow-600 text-white font-medium px-5 rounded-r-lg transition">
                Search
            </button>
        </div>
    </div>
</div>

<!-- Status Filter Buttons -->
<div class="flex flex-wrap gap-3 mb-6">
    <button class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-1.5 rounded-full font-medium">All</button>
    <button class="bg-green-100 text-green-700 px-4 py-1.5 rounded-full font-medium">Delivered</button>
    <button class="bg-yellow-100 text-yellow-700 px-4 py-1.5 rounded-full font-medium">Processing</button>
    <button class="bg-red-100 text-red-700 px-4 py-1.5 rounded-full font-medium">Cancelled</button>
    <button class="bg-teal-100 text-teal-700 px-4 py-1.5 rounded-full font-medium">Returned</button>
</div>

<% const statusColors={ 'Pending' : 'text-blue-600' , 'Confirmed' : 'text-indigo-600' , 'Processing' : 'text-yellow-600'
    , 'Shipped' : 'text-purple-600' , 'Delivered' : 'text-green-600' , 'Cancelled' : 'text-red-600' , 'Returned'
    : 'text-teal-600' } %>

    <!-- Order Table -->
    <div class="overflow-x-auto">
        <table class="min-w-full text-sm border-t border-gray-200">
            <thead>
                <tr class="bg-gray-100 text-left text-gray-700 font-semibold">
                    <th class="py-3 px-4">Order Id</th>
                    <th class="py-3 px-4">Username</th>
                    <th class="py-3 px-4">No Of Items</th>
                    <th class="py-3 px-4">Date</th>
                    <th class="py-3 px-4">Status</th>
                    <th class="py-3 px-4">Payment Method</th>
                    <th class="py-3 px-4">Total Amount</th>
                    <th class="py-3 px-4 text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order=> { %>
                    <tr class="border-t hover:bg-gray-50">
                        <td class="py-3 px-4 flex items-center gap-2">
                            <%= order.orderId %>
                        </td>
                        <td class="py-3 px-4">
                            <%= order.userId.name %>
                        </td>
                        <td class="py-3 px-4">
                            <%= order.items.reduce((acc, item)=> acc + item.quantity, 0) %>
                        </td>
                        <td class="py-3 px-4">
                            <%= order.createdAt.toLocaleDateString("en-IN", { day: "2-digit" , month: "short" ,
                                year: "numeric" }) %>
                        </td>

                        <!-- Status with dynamic color -->
                        <td class="py-3 px-4 font-semibold <%= statusColors[order.status] || 'text-gray-800' %>">
                            <%= order.status %>
                        </td>

                        <td class="py-3 px-4">
                            <%= order.paymentMethod %>
                        </td>
                        <td class="py-3 px-4">₹<%= order.totalAmount %>
                        </td>
                        <td class="py-3 px-4 text-center">
                            <a href="/admin/order/<%= order._id %>"
                                class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-1 rounded-md text-sm">View</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="flex items-center justify-between mt-6 text-sm text-gray-600">
        <p>Showing 1–10 from 100</p>
        <div class="flex gap-2">
            <button class="px-3 py-1 rounded-md bg-yellow-500 text-white font-semibold">1</button>
            <button class="px-3 py-1 rounded-md hover:bg-yellow-100">2</button>
            <button class="px-3 py-1 rounded-md hover:bg-yellow-100">3</button>
            <button class="px-3 py-1 rounded-md hover:bg-yellow-100">4</button>
            <button class="px-3 py-1 rounded-md hover:bg-yellow-100">5</button>
            <button class="px-3 py-1 rounded-md hover:bg-yellow-100">...</button>
        </div>
    </div>
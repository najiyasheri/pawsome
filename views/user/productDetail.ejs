      <!-- Description -->
      <div class="prose max-w-none text-gray">
        <h2 class="font-bold text-lg mb-2">About this item</h2>
        <p>
          <%= product.description %>
        </p>
      </div>
    </div>
  </div>


  <div class="mt-12">
    <% if (relatedProducts.length> 0) { %>
